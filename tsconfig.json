{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "Node",
		"lib": ["es2017"],

		"typeRoots": ["./node_modules/@types", "./types"],
		"types": ["node"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"strictNullChecks": true
	},
	"exclude": ["node_modules", "src"],
	"include": ["."]
}
